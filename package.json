{
    "name": "markdown-it-vuese",
    "version": "0.3.0",
    "description": "ðŸ“– Vuese plugin for markdown-it markdown parser",
    "main": "dist/index.cjs.js",
    "files": [
        "src",
        "dist"
    ],
    "scripts": {
        "cov": "open coverage/lcov-report/index.html",
        "docs": "vuepress dev docs",
        "docs:build": "vuepress build docs",
        "lint": "eslint --fix . docs/.vuepress/ --ignore-path .gitignore",
        "test": "cross-env NODE_ENV=test jest",
        "test:tdd": "cross-env NODE_ENV=test jest --watch",
        "prebuild": "rimraf dist/* & npm run test",
        "build": "cross-env NODE_ENV=production rollup -c",
        "next:pm": "npm --no-git-tag-version version preminor",
        "next:pr": "npm --no-git-tag-version version prerelease",
        "pub": "npm run build && npm publish",
        "pub:n": "npm run build && npm publish --tag next"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm test",
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "{src,test}/**/*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "jest": {
        "bail": true,
        "clearMocks": true,
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**"
        ]
    },
    "dependencies": {
        "@vuese/markdown-render": "^2.1.0",
        "@vuese/parser": "^2.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.3.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
        "@babel/preset-env": "^7.3.1",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "codecov": "^3.2.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.14.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "fs-extra": "^7.0.1",
        "gh-pages": "^2.0.1",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.4",
        "markdown-it": "^8.4.2",
        "markdown-it-custom-block": "^0.1.1",
        "markdown-it-include": "^1.0.1",
        "rimraf": "^2.6.3",
        "rollup": "^1.2.2",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-eslint": "^5.0.0",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-node-resolve": "^4.0.0",
        "rollup-plugin-replace": "^2.1.0",
        "rollup-plugin-uglify": "^6.0.2",
        "vuepress": "^1.0.0-alpha.39"
    },
    "peerDependencies": {
        "markdown-it": "^8.4.2"
    },
    "keywords": [
        "markdown-it-plugin",
        "markdown-it",
        "markdown",
        "vuepress",
        "vuese"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BuptStEve/markdown-it-vuese.git"
    },
    "homepage": "https://buptsteve.github.io/markdown-it-vuese/",
    "author": "StEve Young",
    "license": "MIT"
}
